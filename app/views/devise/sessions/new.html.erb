<div class="container">    
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
        <div class="panel panel-info" >
         <div class="panel-heading">
           <div class="panel-title">Log in</div>
            <div style="float:right; font-size: 80%; position: relative; top:-10px">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
             <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
            </div>
         </div>
         <div style="padding-top:30px" class="panel-body" >
          <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12">
          </div>
           <%= form_for(resource, as: resource_name, url: session_path(resource_name),id: "loginform",class: "form-horizintal", role: "form" ) do |f| %>
            <%= flash[:alert] if flash[:alert].present?%>
           <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.email_field :email, autofocus: true,id: "login-username",class: "form-control" ,placeholder: "Email" %>
           </div>
           <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off",id:"login-password",class: "form-control",placeholder: "Password" %>
           </div>
           <div class="input-group">
            <div class="checkbox">
             <% if devise_mapping.rememberable? -%>
               <label>
                <%= f.check_box :remember_me , class: "login-remember"%>Remember Me
               </label>
             <% end -%>
            </div>
            </div>
            <div style="margin-top:10px" class="form-group">
              <div class="col-sm-12 controls">
               <%= f.submit "Log In",id: "btn-login" ,class: "btn btn-success"%>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12 control">
                  <div>

                      Don't have an account! <%= link_to "Sign up Here", new_registration_path(resource_name)%>
                  </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12 control">
                  <div>
                      Having Problem In logging In?<a onclick="$('#loginbox').hide(); $('#faqs').show();">Click Here!</a>
                  </div>
              </div>
            </div>  
         <% end %>
        </div>
       </div>
      </div>
      <div id="faqs" style="display:none; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">FAQs</div>
                            <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#faqs').show()">Sign In</a></div>
                        </div>  
                        <div class="panel-body" >
                            <form id="signupform" class="form-horizontal" role="form">  
                                    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) ,class: "btn3d btn btn-default btn-lg"%> 
                                    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),class: "btn3d btn btn-default btn-lg"%>                                           
                            </form>
                        </div> 
                    </div>
     </div>
</div>